package sohyun01;

import java.util.Scanner;

public class Main {


	public static void main(String[] args) {
	
			Scanner sc = new Scanner(System.in);
			System.out.println("1부터 6까지의 정수를 입력하세요");
		
			
			
		while (true) {
			int rnum = (int)(Math.random()*6)+1; //숫자를 입력 할 때마다 숫자를 랜덤으로 돌려야 하므로 반복문 안에 넣어주자
			int usernum = sc.nextInt(); // usernum도 마찬가지로 rnum과 값이 다를경우 새로 입력을 받아야 하기에 while 문 안에 넣어주기
			if(usernum == rnum) {
				System.out.println("정답입니다.");
				break;
			} else {
				System.out.println("1부터 6까지의 정수를 다시 입력하세요");
			}
		
			
			
		}
					
			
		
	}
			
			
	}

