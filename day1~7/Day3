3-3

class Solution {
    public String solution(String my_string, int k) {
        String answer = "";
        for (int i = 0; i < k; i++) {
            answer += my_string;
        }
        return answer;
    }
}

=================================
3-4


class Solution {
  public int solution(int a, int b) {
        String key1 = "" + a + b; 
        String key2 = "" + b + a;
        int answer1 = Integer.valueOf(key1);
        int answer2 = Integer.valueOf(key2);
        if (answer1 > answer2) {
            return answer1;
        } else {
            return answer2;
        }
    }
}

